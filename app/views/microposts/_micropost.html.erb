<div id="micropost-<%= micropost.id %>" class="panel panel-default">
    <div class="panel-heading">
        <%= link_to gravatar_for(micropost.user, size: 30), micropost.user %>
        <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
        <br>
        <small>
            Posted
            <%= time_ago_in_words(micropost.created_at) %>
            ago.
            <% if current_user?(micropost.user) %>
            <%= link_to "delete", micropost, method: :delete,
                                     data: { confirm: "You sure?" } %>
            <% end %>
        </small>
    </div>
    <div class="panel-body">
        <%= micropost.content %>
        <%= image_tag micropost.picture.url if micropost.picture? %>
    </div>
    <small>
      <span style="color: gray;">
        <span style="padding-left: 13px;"><%= pluralize(micropost.like,'like') %></span>
        <span style="padding-left: 5px;"><%= pluralize(micropost.comment,'comment') %></span>
        <span style="padding-left: 5px;"><%= pluralize(micropost.share,'share') %></span>
      </span>
    </small>
    <br>
        <div class="btn-group">
          <%= link_to "Like" , '#', class: "btn" %>
          <%= link_to "Comment" , '#', class: "btn" %>
          <%= link_to "Share" , '#', class: "btn" %>
        </div>

</div>
