<div class="panel panel-default">
    <div class="panel-heading clearfix">
        <h3 class="panel-title pull-left"><%= yield(:form_title) %></h3>
    </div>
    <div class="modal-body">

        <%= simple_form_for @blog do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

            <div class="form-group">
                <%= f.input :blog_title, label: "Title", placeholder: "Title", autofocus: true %>
            </div>

            <div class="form-group">
                <%= f.input :blog_subtitle, label: "Sub title", placeholder: "Sub title" %>
            </div>

            <div class="form-group">
                <%= f.input :blog_content, label: "Content", as: :ckeditor, input_html: {ckeditor: {toolbar: 'FULL'}} %>
            </div>

            <div class="form-group text-center">
                <%= f.button :submit, class: 'btn btn-primary' %>
                <p>
                    Need help on how to use the editor above? Click
                    <%= link_to "here", help_path %>
                </p>
            </div>
        <% end %>
    </div>
</div>
